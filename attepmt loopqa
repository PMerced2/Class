#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#define PAUSE system("pause")

main() {
	char name[20];
	int i=1;
	int times;
	printf("Please enter how many times you want name printed: \n ");
	scanf("%i", &times);
	printf("Please enter name: \n");
	scanf("%s", name);
	
	while (i < times) {
		printf("%i . %s \n", i, name);
	
		i++;
		PAUSE;
	} 
	// end while
	PAUSE;
} // end main
